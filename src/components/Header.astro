---
import { SITE, LINKS } from "@consts";
import { cn } from "@lib/utils";
const { pathname } = Astro.url;
const subpath = pathname.match(/[^/]+/g);
import Container from "@components/Container.astro";
---

<header id="header" class="fixed top-0 w-full h-20 z-50">
  <Container size="lg">
    <div class="flex items-center justify-between h-full w-full">
      <div class="flex gap-3">
        <button
          id="header-theme-button"
          aria-label={`Toggle light and dark theme`}
          class={cn(
            "size-10 rounded-full p-2.5 items-center justify-center",
            "bg-card/60 backdrop-blur-md border border-card-border/50 text-subtle hover:text-foreground hover:border-foreground shadow-sm",
            "transition-all duration-300 ease-in-out hover:-translate-y-0.5",
          )}
        >
          <svg class="size-full block dark:hidden stroke-current fill-none">
            <use href="/ui.svg#sun"></use>
          </svg>
          <svg class="size-full hidden dark:block stroke-current fill-none">
            <use href="/ui.svg#moon"></use>
          </svg>
        </button>
      </div>

      <div class="flex items-center gap-3">
        <nav class="hidden md:flex items-center justify-center text-sm gap-2 p-1.5 rounded-full bg-card/60 backdrop-blur-md border border-card-border/50 shadow-sm">
          {
            LINKS.map((LINK) => (
              <a
                href={LINK.HREF}
                class={cn(
                  "h-8 rounded-full px-5 font-medium tracking-wide",
                  "flex items-center justify-center",
                  "transition-all duration-300 ease-in-out",
                  pathname === LINK.HREF || "/" + subpath?.[0] === LINK.HREF
                    ? "bg-foreground text-background shadow-md"
                    : "text-subtle hover:bg-card-border/50 hover:text-foreground",
                )}
              >
                {LINK.TEXT}
              </a>
            ))
          }
        </nav>

        <button
          id="header-drawer-button"
          aria-label={`Toggle drawer open and closed`}
          class={cn(
            "flex md:hidden",
            "size-10 rounded-full p-2.5 items-center justify-center",
            "bg-card/60 backdrop-blur-md border border-card-border/50 text-subtle hover:text-foreground hover:border-foreground shadow-sm",
            "transition-all duration-300 ease-in-out",
          )}
        >
          <svg id="drawer-open" class="size-full stroke-current fill-none">
            <use href="/ui.svg#menu"></use>
          </svg>
          <svg id="drawer-close" class="size-full stroke-current fill-none">
            <use href="/ui.svg#x"></use>
          </svg>
        </button>
      </div>
    </div>
  </Container>
</header>

<style>
  #header-drawer-button > #drawer-open {
    @apply block;
  }

  #header-drawer-button > #drawer-close {
    @apply hidden;
  }

  #header-drawer-button.open > #drawer-open {
    @apply hidden;
  }

  #header-drawer-button.open > #drawer-close {
    @apply block;
  }
</style>

<script is:inline>
  function toggleDrawer() {
    const drawer = document.getElementById("drawer");
    const drawerButton = document.getElementById("header-drawer-button");
    drawer?.classList.toggle("open");
    drawerButton?.classList.toggle("open");
  }

  function initializeDrawerButton() {
    const drawerButton = document.getElementById("header-drawer-button");
    drawerButton?.addEventListener("click", toggleDrawer);
  }

  document.addEventListener("astro:after-swap", initializeDrawerButton);
  initializeDrawerButton();
</script>
